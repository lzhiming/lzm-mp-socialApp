.base-style{
  padding: 10rpx 20rpx;
  background: white;
  height: 100vh;
}
.upload-style{
  margin: 30rpx 0rpx;
  padding-top: 20rpx;
}
.type-grid{
  display: grid;
  padding: 4vw 3vw;
  grid-template-columns: repeat(4, 1fr);
  grid-column-gap: 3vw;
  grid-row-gap: 3vw;
}
.type-col{
  padding: 15rpx 0rpx;
  font-size: .9rem;
  color: #333;
  text-align: center;
  border-radius: 15rpx;
  border: 1px solid #ccc;
  box-shadow: 0 10rpx 10rpx rgb(0 0 0 / 5%);
}
.type-selected{
  padding: 15rpx 0rpx;
  font-size: .9rem;
  color: #ee0a24;
  text-align: center;
  border-radius: 15rpx;
  border: 1px solid #ee0a24;
  box-shadow: 0 10rpx 10rpx rgb(0 0 0 / 5%);
}
.custom-button {
  width: 26px;
  color: #fff;
  font-size: 10px;
  line-height: 18px;
  text-align: center;
  background-color: #ee0a24;
  border-radius: 100px;
}
.slider-style{
  display: flex;
  justify-content: space-between;
  margin: 30rpx 0rpx;
  background: white;
  padding: 20rpx 30rpx 40rpx 30rpx;
}
.switch-style{
  margin: 15px 0px;
  padding-left: 30rpx;
  display: flex;
  justify-content: flex-start;
  color: #333;
  line-height: 60rpx;
  font-size: .9rem;
}
.bottom-input{
  position: fixed;
  bottom: 0;
  background-color: #fff;
  padding: 20rpx 15rpx;
  width: calc(100vw - 42rpx);
  z-index: 2;
}
.type-tag{
  font-size: .9rem;
  display: initial;
  padding: 10rpx 15rpx;
  background: #e6e6e6;
  border-radius: 6rpx;
}
.team-info{
  display: flex;
  justify-content: space-between;
  color: #969799;
  font-size: .9rem;
  padding: 0rpx 30rpx;
}